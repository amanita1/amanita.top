name: Deploy to GitHub Pages

on:
  push:
    branches: [ main ]
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: true

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm

      - name: Install
        run: npm ci

      - name: Build
        run: npm run build

      # Блокируем Jekyll (иначе пути с _ и ассеты могут чудить)
      - name: Disable Jekyll
        run: touch dist/.nojekyll

      # Кастомный домен в артефакт
      - name: Add CNAME
        run: echo "amanita.top" > dist/CNAME

      # SPA фоллбек для React Router
      - name: SPA fallback (React Router)
        run: cp dist/index.html dist/404.html

      # ⚠️ Диагностика: убеждаемся, что в dist/index.html нет /src/main.tsx
      - name: Sanity check built HTML
        run: |
          echo "---- HEAD of dist/index.html ----"
          head -n 30 dist/index.html
          echo "---- Grep for /src/main ----"
          ! grep -q "/src/main" dist/index.html || (echo "ERROR: dev entry found in dist/index.html" && exit 1)

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: dist

  deploy:
    needs: build
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
